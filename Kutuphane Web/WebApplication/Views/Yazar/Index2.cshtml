@model Yazar
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yazarlar</title>
    <link rel="stylesheet" href="~/Web/css/Detay - Copy.css">
</head>
<body>
    <form id="kategoriForm" method="post" action="@{
        if (Model.ID == 0) {
            @Url.Action("Add", "Yazar")
        } else {
            @Url.Action("Edit", "Yazar", new { id = Model.ID })
        }
    }">
        <div class="containerr">
            <h1>Yazarlar</h1>
            <table>
                <thead>
                    <tr>

                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Doğum Tarihi</th>
                        <th>Ülke</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input name="Ad" type="text" value="@Model.Ad"></td>
                        <td><input name="Soyad" type="text" value="@Model.Soyad"></td>
                        <td><input name="DogumTarihi" type="date" value="@Model.DogumTarihi"></td>
                        <td><input name="Ulke" type="text" value="@Model.Ulke"></td>
                    </tr>
                </tbody>
            </table>
            <button type="submit" class="add-btn">Kaydet</button>
        </div>
    </form>
    <script>
    document.getElementById('yazarForm').addEventListener('submit', function (event) {
        var Ad = document.getElementsByName('Ad')[0].value.trim();
        if (Ad === '') {
            alert('Lütfen yazar adı alanını doldurunuz.');
            event.preventDefault();
        }
    });

    document.querySelector(".add-btn").addEventListener("click", function() {
        window.location.href = "@Url.Action("Index", "Yazar")";
    });
    </script>

</body>
</html>



